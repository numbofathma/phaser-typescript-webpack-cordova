{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    // "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": false,
    "typeRoots": [
      "node_modules/@types",
      "node_modules/phaser-ce/typescript",
    ],
    "baseUrl": "./",
    "rootDir": "./",
    "outDir": "www",
    "paths": {
      "~/*": [
        "src/*",
      ],
      "~config/*": [
        "src/config/*",
      ],
      "~helpers/*": [
        "src/helpers/*"
      ],
      "~states/*": [
        "src/states/*"
      ],
      "~prefabs/*": [
        "src/prefabs/*"
      ],
      "~plugins/*": [
        "src/plugins/*"
      ],
      "~interfaces/*": [
        "src/interfaces/*"
      ],
    },
  },
  "include": [
    "**/*.ts",
    "types/**/*",
    "test/**/*",
  ],
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts",
    "src/**/__tests__/*.ts",
    "plugins/**/*",
    "platforms/**/*",
    "www",
  ],
  "removeComments": true,
  "compileOnSave": false,
  "noImplicitAny": true,
  "files": [
    "./node_modules/cordova-plugin-inappbrowser/types/index.d.ts",
    "./node_modules/cordova-plugin-statusbar/types/index.d.ts",
    "./node_modules/cordova-plugin-dialogs/types/index.d.ts",
  ]
}
